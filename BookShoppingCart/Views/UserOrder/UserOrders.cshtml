@model IEnumerable<BookShoppingCart.Models.Order>

<div style="width: 90%; margin:auto" class="mt-4">
    @if (Model != null && Model.Any())
    {
        <h3 class="text-center text-primary fw-bold mb-4">My Orders</h3>

        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th style="width: 20%">Order Date</th>
                    <th style="width: 20%">Status</th>
                    <th style="width: 20%">Total</th>
                    <th style="width: 20%">Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    var collapseId = $"order-items-{order.Id}";
                    var orderTotal = order.OrderDetail?.Sum(item => (item.Book?.Price ?? 0) * item.Quantity) ?? 0;

                    <tr class="text-center align-middle">
                        <td>@order.CreateDate.ToString("MM/dd/yyyy")</td>
                        <td><span class="badge bg-success">@order.OrderStatus?.StatusName</span></td>
                        <td><strong>$@orderTotal.ToString("0.00")</strong></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false">
                                View Items
                            </button>
                        </td>
                    </tr>

                    <tr class="collapse" id="@collapseId">
                        <td colspan="4" class="bg-light">
                            @if (order.OrderDetail != null && order.OrderDetail.Any())
                            {
                                <div class="table-responsive mt-2">
                                    <table class="table table-bordered table-sm">
                                        <thead class="table-light text-center">
                                            <tr>
                                                <th>Book</th>
                                                <th>Image</th>
                                                <th>Genre</th>
                                                <th>Unit Price</th>
                                                <th>Quantity</th>
                                                <th>Total Price</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in order.OrderDetail)
                                            {
                                                <tr class="text-center align-middle">
                                                    <td>@(item.Book?.BookName ?? "N/A")</td>
                                                    <td>
                                                        <img src="~/images/@(string.IsNullOrEmpty(item.Book?.Image) ? "NoImage.jpeg" : item.Book.Image)"
                                                             class="img-thumbnail" style="width: 60px; height: 80px;" />
                                                    </td>
                                                    <td>@(item.Book?.Genre?.GenreName ?? "N/A")</td>
                                                    <td>
                                                        @(item.Book?.Price != null
                                                                                                ? $"${item.Book.Price.ToString("0.00")}"
                                                                                                : "N/A")
                                                                                                    </td>
                                                                                                    <td>@item.Quantity</td>
                                                                                                    <td>
                                                        @(item.Book?.Price != null
                                                                                                ? $"${(item.Book.Price * item.Quantity).ToString("0.00")}"
                                                                                                : "N/A")
                                    </td>
                                </tr>
                                                                }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-muted text-center p-3">No items in this order.</div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <a href="javascript:history.back()" class="btn btn-primary">
                ← Back
            </a>
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <h5 class="text-muted">You haven't placed any orders yet.</h5>
            <a href="/" class="btn btn-outline-primary mt-3">Browse Books</a>
        </div>
    }
</div>
